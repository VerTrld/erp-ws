generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int     @default(0)
  items       Item[]
}

model Person {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?  @unique
  phone     String?
  role      PersonRole
  purchases Purchase[] @relation("SupplierRelation")
  sales     Sale[]     @relation("CustomerRelation")
}

enum PersonRole {
  SUPPLIER
  CUSTOMER
}

model Purchase {
  id          Int      @id @default(autoincrement())
  supplier    Person   @relation("SupplierRelation", fields: [supplierId], references: [id])
  supplierId  Int
  createdAt   DateTime @default(now())
  items       Item[]
}

model Sale {
  id         Int      @id @default(autoincrement())
  customer   Person   @relation("CustomerRelation", fields: [customerId], references: [id])
  customerId Int
  createdAt  DateTime @default(now())
  items      Item[]
}

model Item {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  price     Float
  nature    ItemNature
  purchase  Purchase? @relation(fields: [purchaseId], references: [id])
  purchaseId Int?
  sale      Sale?     @relation(fields: [saleId], references: [id])
  saleId    Int?
}

enum ItemNature {
  PURCHASE
  SALE
}
